<!-- 主容器 -->  
<view class="stepper">  
    <!-- 减号 -->  
    <text class="{{minusStatus}} reduce" bindtap="bindMinus">-</text>  
    <!-- 数值 -->  
    <input class="{{minusStatus}}" type="number" bindchange="bindManual" value="{{num}}" /> 
    <!-- 加号 -->  
    <text class="plus" bindtap="bindPlus">+</text>  
</view> 