
  
/*加号和减号*/  
.stepper text {  
    width: 35rpx;  
    height: 35rpx;
    line-height: 35rpx;  
    text-align: center;  
    float: left;  
    border: 1px solid #21A0FA;
    border-radius: 50%;
    font-size: 50rpx;
}  

.reduce{
  color: #21A0FA;
}

.plus{
  color: white;
  background-color: #21A0FA;
}
  
/*数值*/  
.stepper input {  
    width:5rpx;  
    height: 50rpx;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
}  
  
/*普通样式*/  
.stepper .normal{  
    visibility: visible;
}  
  
/*禁用样式*/  
.stepper .disabled{  
    visibility :hidden; 
}  