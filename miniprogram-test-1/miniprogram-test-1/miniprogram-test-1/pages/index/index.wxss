page{
  background-color: #EFEFF1;
  font-family: microsoft yahei;
}

swiper image{
  width: 100%;
  height: 350rpx;
}

.mian-view{
  width: 90%;
  /* height: 500rpx; */
  background-color: white;
  z-index: 4;
  position: absolute;
  top:250rpx;
  left: 5%;
  border-radius: 20rpx;
  box-shadow: 30rpx 30rpx 20rpx #EDEDED;
}

.content-view{
  width: 90%;
  margin: 0 auto;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #EDEDED;
  font-weight: 600;
}

.tips{
  font-size: 30rpx;
  text-align: center;
  color: rgb(145, 97, 97);
}

.content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: rgb(145, 97, 97);
  font-size: 35rpx;
}

.icon image{
  width: 25rpx;
  height: 25rpx;
}

.radio-view{
  font-size: 35rpx;
}

radio{
 transform:scale(0.6);
 color: #FA5213;
}

.but-view{
  width: 90%;
  margin: 0 auto;
  height: 140rpx;
  border-bottom: 1px solid #EDEDED;
}

.but-view button{
  margin-top: 30rpx;
  height: 100rpx;
  background-color: #FA5213;
  border-radius: 20rpx;
  color: white;
}

.explain{
  font-size: 30rpx;
  color:gray;
  display: flex;
  flex-direction: row;
}

.explain image{
  width: 30rpx;
  height: 30rpx;
}

.img{
  margin-top: 6rpx;
  margin-right: 10rpx;
}