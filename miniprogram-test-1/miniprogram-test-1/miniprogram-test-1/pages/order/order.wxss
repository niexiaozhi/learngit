/* pages/order/order.wxss */
page{
  font-size: 28rpx;
  background-color: #F7F7F7;
}

.color_red{
  color:#C02F37;
}

.color_gray{
  color: gray;
}

.common_view{
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
}

.canteen{
  border-bottom: 1rpx solid #F7F7F7;
  height: 90rpx;
  line-height: 90rpx;
}

.order_details{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.details_title{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #F7F7F7;
}

.details_content{
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1px solid #F7F7F7;
}

.img_view{
 display: flex;
 flex-direction: row;
}

.details_content image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.dish_name{
  font-weight: 600;
}

.price{
  margin-left: 30rpx;
}

.coupon_view{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #F7F7F7;
}

.discount{
  height: 100rpx;
  line-height: 100rpx;
}

.remarks_view{
  margin-top: 20rpx;
  margin-bottom: 120rpx;
}

.remarks{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #F7F7F7;
}

.remarks input{
  width: 100%;
  height: 100%;
}

.bottom_view{
  position:fixed;
  bottom:0;
  background-color: #4A484D;
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  z-index: 4;
}

.settlement{
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  /* background-color: #61D67F; */
  background-color: #FA5213;
  color: white;
  font-size: 30rpx;
  text-align: center;
}

.total_price{
  color: white;
  font-size: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
}

